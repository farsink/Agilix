{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build" // Specify the output directory for compiled files
  },
  "include": ["./src/**/*", "./server.ts"], // Include source files
  "exclude": ["node_modules"] // Exclude unnecessary files
}
